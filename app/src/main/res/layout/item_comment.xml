<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/llCommentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/shadow_elevation"
        android:outlineAmbientShadowColor="@color/shadow_color"
        android:outlineSpotShadowColor="@color/shadow_color"
        android:foreground="@drawable/ripple_publish"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivMentionAvatarRootHeader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/tvCommentAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ivMentionAvatarRootHeader"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textColor="#333"/>
            
            <TextView
                android:id="@+id/tvAuthorBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvCommentAuthor"
                android:text="楼主"
                android:background="@drawable/bg_badge_white_round"
                android:textColor="?attr/colorSecondary"
                android:textSize="10sp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"/>
                
        <LinearLayout
            android:id="@+id/llCommentLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end|center_vertical"
            android:paddingStart="4dp"
            android:paddingEnd="2dp"
            android:background="?attr/selectableItemBackground"
            android:minHeight="@dimen/tap_min_size"
            android:minWidth="@dimen/tap_min_size"
            android:clickable="true"
            android:focusable="true">
                
                <TextView
                    android:id="@+id/tvCommentLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#666"/>
                    
                <ImageView
                    android:id="@+id/ivCommentLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like_outline"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMentionAvatarRoot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                android:visibility="gone"
                android:contentDescription="mention avatar" />

            <TextView
                android:id="@+id/tvCommentContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
            
        <TextView
            android:id="@+id/tvCommentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="11sp"
            android:textColor="#999"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/llReplies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"/>
            
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/transparent"/>

</LinearLayout>
