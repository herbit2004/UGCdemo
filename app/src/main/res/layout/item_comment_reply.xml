<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llReplyRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="6dp">

    <View
        android:id="@+id/viewGuideBar"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:id="@+id/llReplyContentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llReplyContentRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMentionAvatar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                android:visibility="gone"
                android:contentDescription="mention avatar" />

            <TextView
                android:id="@+id/tvReplyContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="#555555"
                android:lineSpacingExtra="2dp" />

            <LinearLayout
                android:id="@+id/llReplyLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <TextView
                    android:id="@+id/tvReplyLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#666666" />

                <ImageView
                    android:id="@+id/ivReplyLike"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:contentDescription="like" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvReplyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="#999999" />
    </LinearLayout>

</LinearLayout>
