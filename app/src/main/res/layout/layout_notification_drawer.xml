<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notifications_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@android:color/black"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <!-- Mention -->
    <RelativeLayout
        android:id="@+id/itemMention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_mention"
            android:textSize="16sp"
            android:textColor="#333333"/>
            
        <TextView
            android:id="@+id/tvCountMention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_red_dot"
            android:text="@string/number_zero"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- Reply -->
    <RelativeLayout
        android:id="@+id/itemReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_new_reply"
            android:textSize="16sp"
            android:textColor="#333333"/>
            
        <TextView
            android:id="@+id/tvCountReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_red_dot"
            android:text="@string/number_zero"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- Like -->
    <RelativeLayout
        android:id="@+id/itemLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_new_like"
            android:textSize="16sp"
            android:textColor="#333333"/>
            
        <TextView
            android:id="@+id/tvCountLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_red_dot"
            android:text="@string/number_zero"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- Follow -->
    <RelativeLayout
        android:id="@+id/itemFollow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_new_follow"
            android:textSize="16sp"
            android:textColor="#333333"/>
            
        <TextView
            android:id="@+id/tvCountFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_red_dot"
            android:text="@string/number_zero"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
